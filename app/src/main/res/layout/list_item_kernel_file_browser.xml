<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listKernelBrowserLayout"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listKernelBrowserIcon"
        android:background="@drawable/circle_folder"
        android:padding="12dp"
        android:tint="@color/colorAccentLight"
        android:src="@drawable/ic_folder_outline"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listKernelBrowserName"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="#ffffff"/>

</LinearLayout>